# ==================== EditorConfig 配置文件 ====================
# 用于统一不同编辑器和 IDE 的代码风格
# 参考文档: https://editorconfig.org/

# 根配置文件（会应用到所有子目录）
root = true

# 所有文件的通用配置
[*]
# 字符编码
charset = utf-8
# 使用空格缩进（true）还是 Tab（false）
indent_style = space
# 缩进大小
indent_size = 2
# 行尾符类型：lf（Unix/Mac）或 crlf（Windows）
end_of_line = lf
# 文件末尾插入一个空行
insert_final_newline = true
# 去除行尾空格
trim_trailing_whitespace = true

# Markdown 文件特殊配置
[*.md]
# Markdown 文件保留行尾空格（用于换行）
trim_trailing_whitespace = false
# Markdown 文件末尾可以不插入空行
insert_final_newline = false

# JSON 文件配置
[*.json]
indent_size = 2

# YAML 文件配置
[*.{yml,yaml}]
indent_size = 2

# CSS、Sass、Less 文件配置
[*.{css,sass,scss,less}]
indent_size = 2

# JavaScript、TypeScript、JSX、TSX 文件配置
[*.{js,jsx,ts,tsx}]
indent_size = 2

# HTML 文件配置
[*.html]
indent_size = 2

# 配置文件
[*.{json,yml,yaml,ini}]
indent_size = 2

